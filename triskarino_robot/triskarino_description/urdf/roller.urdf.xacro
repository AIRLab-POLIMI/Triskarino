<?xml version="1.0" ?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

<!-- SCALING OF MASS AND INERTIAL MATRICES ACCORDING TO https://answers.ros.org/question/237421/calculating-inertial-matrix-for-gazebo/ -->
<xacro:macro
	name="roller_macro"
	params="parent name xyz rpy scale_factor">

		<link name="roller_${name}_rim_${parent}_link">
			<inertial>
				<mass value="${0.00113845 * scale_factor * scale_factor * scale_factor}"/>
				<inertia
					ixx="${2.53776e-08 *scale_factor * scale_factor * scale_factor * scale_factor * scale_factor}"
					ixy="0"
					ixz="0"
					iyy="${2.53776e-08 *scale_factor * scale_factor * scale_factor * scale_factor * scale_factor}"
					iyz="0"
					izz="${1.47666e-08 * scale_factor * scale_factor * scale_factor * scale_factor * scale_factor}"/>
			</inertial>
			<visual>
				<geometry>
					<mesh scale="${scale_factor} ${scale_factor} ${scale_factor}" filename="package://triskarino_description/meshes/roller.stl"/>
				</geometry>
				<material name="roller_material">
					<color rgba="0.1 0.1 0.1 1"/>
				</material>
			</visual>
			<collision>
				<geometry>
					<mesh scale="${scale_factor} ${scale_factor} ${scale_factor}" filename="package://triskarino_description/meshes/roller.stl"/>
				</geometry>
			</collision>
		</link>
	<gazebo reference="roller_${name}_rim_${parent}_link">
    		<material>Gazebo/Black</material>
  	</gazebo>
		<joint name="roller_${name}_rim_${parent}_joint" type="continuous">
			<parent link="rim_${parent}_link"/>
			<child link="roller_${name}_rim_${parent}_link"/>
			<axis xyz="0 0 1"/>
			<origin xyz="${xyz}" rpy="${rpy}"/>

		</joint>
	</xacro:macro>

</robot>